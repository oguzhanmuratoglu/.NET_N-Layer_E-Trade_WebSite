@model Mrt.Northwind.MvcWepUI.Models.ProductListViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}

<div>
    <table class="table table-responsive">
        <tr>
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>UnitsInStock</td>
            <td></td>
        </tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a class="btn btn-xs btn-success" asp-controller="Card" asp-action="AddToCard" asp-route-productId="@product.ProductId">AddToCard!</a></td>
            </tr>
        }
    </table>
</div>

<product-list-pager current-category="@Model.CurrentCategory" 
                    current-page="@Model.CurrentPage" 
                    page-count="@Model.PageCount"
                    page-size="@Model.PageSize"></product-list-pager>

