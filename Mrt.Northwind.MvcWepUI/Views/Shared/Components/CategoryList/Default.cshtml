@model Mrt.Northwind.MvcWepUI.Models.CategoryListViewModel

<div class="list-group">

    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";

        if (Model.CurrentCategory==@category.CategoryId)
        {
            css += " active";
        }

        <a href="/product/index?category=@category.CategoryId" class="@css">@category.CategoryName</a>
    }
</div>